<% content_for :title, "Edit Note" %>

<div class="edit">

  <div class="edit_info">
    
    <span>Edit Note</span>
  </div>

  <%= form_for @note, url: { action: 'update' } do |f| %>

    <% if @note.errors.any? %>
      <%= render 'partials/emssg', mssg: @post.errors.full_messages[0] %>
    <% end %>

    <div class="eu_div">
      <span class='edit_span'>Title</span>
      <%= f.text_field :title, class: "e_username", placeholder: 'Title..', autofocus: true, spellcheck:false, autocomplete: false %>
    </div>
    <div class="eb_div">
      <span class='edit_span'>Content</span>
      <%= f.text_area :text, placeholder: "text..", autofocus: true, class: "e_bio", spellcheck:false, autocomplete: false %>
    </div>
    <div class="eb_btns">
      <%= f.submit "Update Note" %>
    </div>

  <% end %>

</div>